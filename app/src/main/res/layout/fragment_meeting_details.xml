<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent">

                        <TextView
                            android:id="@+id/sport_type_prompt"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/details_card_text_margin"
                            android:layout_marginStart="@dimen/details_card_text_margin"
                            android:layout_width="wrap_content"
                            android:text="@string/prompt_sporttype"
                            android:textSize="@dimen/card_header_text_size" />

                        <TextView
                            android:id="@+id/sport_type"
                            android:layout_below="@id/sport_type_prompt"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/details_card_text_margin"
                            android:layout_marginStart="@dimen/details_card_text_margin"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:textColor="#202020"
                            android:textSize="@dimen/card_content_text_size" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <ImageView
                            android:id="@+id/map_image"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_directions_grey_700_24dp" />

                        <TextView
                            android:id="@+id/sports_facility_prompt"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/details_card_text_margin"
                            android:layout_marginStart="@dimen/details_card_text_margin"
                            android:layout_width="wrap_content"
                            android:text="@string/sports_facility"
                            android:textSize="@dimen/card_header_text_size" />

                        <TextView
                            android:id="@+id/sports_facility_description"
                            android:layout_below="@id/sports_facility_prompt"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/details_card_text_margin"
                            android:layout_marginStart="@dimen/details_card_text_margin"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:textColor="#202020"
                            android:textSize="@dimen/card_content_text_size" />

                        <TextView
                            android:id="@+id/sports_facility_address"
                            android:layout_below="@id/sports_facility_description"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/details_card_text_margin"
                            android:layout_marginStart="@dimen/details_card_text_margin"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:textColor="#202020"
                            android:textSize="@dimen/card_content_text_size" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <TextView
                            android:id="@+id/cost_prompt"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/details_card_text_margin"
                            android:layout_marginStart="@dimen/details_card_text_margin"
                            android:layout_width="wrap_content"
                            android:text="@string/prompt_cost"
                            android:textSize="@dimen/card_header_text_size" />

                        <TextView
                            android:id="@+id/cost"
                            android:layout_below="@id/cost_prompt"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/details_card_text_margin"
                            android:layout_marginStart="@dimen/details_card_text_margin"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:textColor="#202020"
                            android:textSize="@dimen/card_content_text_size" />

                    </RelativeLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:hint="@string/prompt_addcomment"
                        android:id="@+id/new_comment_text"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:lines="1"
                        android:maxLines="10"
                        android:singleLine="false"
                        android:textSize="13sp" />

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/add_comment_button"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/action_addcomment"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comments_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/progress_bar" />
</RelativeLayout>
