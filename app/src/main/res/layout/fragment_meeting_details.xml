<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/sport_type_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:text="@string/prompt_sporttype"
                        android:textSize="@dimen/card_header_text_size" />

                    <TextView
                        android:id="@+id/sport_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sport_type_prompt"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:layout_marginTop="2dp"
                        android:textColor="#202020"
                        android:textSize="@dimen/card_content_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/map_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_place_grey_700_24dp" />

                    <TextView
                        android:id="@+id/sports_facility_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:text="@string/sports_facility"
                        android:textSize="@dimen/card_header_text_size" />

                    <TextView
                        android:id="@+id/sports_facility_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sports_facility_prompt"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:layout_marginTop="2dp"
                        android:textColor="#202020"
                        android:textSize="@dimen/card_content_text_size" />

                    <TextView
                        android:id="@+id/sports_facility_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sports_facility_description"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:layout_marginTop="2dp"
                        android:textColor="#202020"
                        android:textSize="@dimen/card_content_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/cost_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:text="@string/prompt_cost"
                        android:textSize="@dimen/card_header_text_size" />

                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cost_prompt"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:layout_marginTop="2dp"
                        android:textColor="#202020"
                        android:textSize="@dimen/card_content_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/start_datetime_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:text="@string/prompt_start_time"
                        android:textSize="@dimen/card_header_text_size" />

                    <TextView
                        android:id="@+id/start_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/start_datetime_prompt"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:layout_marginTop="2dp"
                        android:textColor="#202020"
                        android:textSize="@dimen/card_content_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/end_datetime_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:text="@string/prompt_end_time"
                        android:textSize="@dimen/card_header_text_size" />

                    <TextView
                        android:id="@+id/end_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/end_datetime_prompt"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:layout_marginTop="2dp"
                        android:textColor="#202020"
                        android:textSize="@dimen/card_content_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/organizer_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:text="@string/organizer"
                        android:textSize="@dimen/card_header_text_size" />

                    <TextView
                        android:id="@+id/organizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/organizer_prompt"
                        android:layout_marginLeft="@dimen/details_card_text_margin"
                        android:layout_marginStart="@dimen/details_card_text_margin"
                        android:layout_marginTop="2dp"
                        android:textColor="#202020"
                        android:textSize="@dimen/card_content_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/leave_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="Leave"
                        android:enabled="false"
                        />
                    <Button
                        android:id="@+id/join_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/leave_button"
                        android:text="Join"
                        android:enabled="false"
                        />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/new_comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_addcomment"
                    android:inputType="textMultiLine"
                    android:lines="1"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/add_comment_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/action_addcomment"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/comments_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content" />

        <include layout="@layout/progress_bar" />

    </LinearLayout>


</ScrollView>